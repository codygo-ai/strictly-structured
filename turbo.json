{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", "eslint.config.mjs"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "build/**", ".next/**", "out/**", "*.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
