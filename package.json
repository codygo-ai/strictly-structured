{
  "name": "@ssv/mono",
  "version": "0.0.0",
  "private": true,
  "description": "Structured Schema Validator monorepo",
  "scripts": {
    "dev": "pnpm --filter @ssv/site dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "start": "pnpm --filter @ssv/site start",
    "dev:lambda": "pnpm --filter @ssv/lambdas dev",
    "deploy": "bash scripts/firebase-deploy.sh",
    "deploy:aws": "bash sam/deploy.sh"
  },
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=9"
  },
  "devDependencies": {
    "@ssv/eslint-config": "workspace:*",
    "@ssv/tsconfig": "workspace:*",
    "eslint": "^9.39.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.0.0"
}
