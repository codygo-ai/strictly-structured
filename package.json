{
  "name": "@ssv/mono",
  "version": "0.0.0",
  "private": true,
  "description": "Structured Schema Validator monorepo",
  "scripts": {
    "dev": "concurrently -n fe,be,em -c blue,green,magenta \"pnpm --filter @ssv/frontend dev\" \"pnpm --filter @ssv/backend dev\" \"pnpm --filter @ssv/backend serve\"",
    "dev:frontend": "pnpm --filter @ssv/frontend dev",
    "dev:backend": "pnpm --filter @ssv/backend dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "validate": "turbo run lint typecheck",
    "start": "pnpm --filter @ssv/frontend start",
    "deploy": "pnpm run build && pnpm exec firebase deploy",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=9"
  },
  "devDependencies": {
    "@codygo-ai/eslint-config-base": "^0.1.0",
    "@codygo-ai/eslint-config-react": "^0.1.0",
    "@codygo-ai/tsconfig": "^0.1.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "firebase-tools": "^14.0.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": "eslint --max-warnings 0"
  },
  "packageManager": "pnpm@9.0.0"
}
