{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema (Draft-07 + 2020-12 keywords)",
  "definitions": {
    "schemaArray": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#" }
    },
    "nonNegativeInteger": {
      "type": "integer",
      "minimum": 0
    },
    "nonNegativeIntegerDefault0": {
      "allOf": [
        { "$ref": "#/definitions/nonNegativeInteger" },
        { "default": 0 }
      ]
    },
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    },
    "stringArray": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "default": []
    }
  },
  "type": ["object", "boolean"],
  "properties": {
    "$id": {
      "type": "string",
      "format": "uri-reference"
    },
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "$ref": {
      "type": "string",
      "format": "uri-reference"
    },
    "$comment": {
      "type": "string"
    },
    "$anchor": {
      "type": "string",
      "description": "(2020-12) Plain name anchor for referencing with $ref"
    },
    "$dynamicRef": {
      "type": "string",
      "format": "uri-reference",
      "description": "(2020-12) Dynamic reference resolved at evaluation time"
    },
    "$dynamicAnchor": {
      "type": "string",
      "description": "(2020-12) Dynamic anchor for $dynamicRef resolution"
    },
    "$vocabulary": {
      "type": "object",
      "description": "(2020-12) Declares required/optional vocabularies",
      "additionalProperties": { "type": "boolean" }
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "default": true,
    "readOnly": {
      "type": "boolean",
      "default": false
    },
    "writeOnly": {
      "type": "boolean",
      "default": false
    },
    "deprecated": {
      "type": "boolean",
      "default": false,
      "description": "(2020-12) Marks the schema as deprecated"
    },
    "examples": {
      "type": "array",
      "items": true
    },
    "multipleOf": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "maximum": {
      "type": "number"
    },
    "exclusiveMaximum": {
      "type": "number"
    },
    "minimum": {
      "type": "number"
    },
    "exclusiveMinimum": {
      "type": "number"
    },
    "maxLength": { "$ref": "#/definitions/nonNegativeInteger" },
    "minLength": { "$ref": "#/definitions/nonNegativeIntegerDefault0" },
    "pattern": {
      "type": "string",
      "format": "regex"
    },
    "additionalItems": { "$ref": "#" },
    "items": {
      "anyOf": [
        { "$ref": "#" },
        { "$ref": "#/definitions/schemaArray" }
      ],
      "default": true
    },
    "prefixItems": {
      "$ref": "#/definitions/schemaArray",
      "description": "(2020-12) Tuple validation – replaces array form of items"
    },
    "maxItems": { "$ref": "#/definitions/nonNegativeInteger" },
    "minItems": { "$ref": "#/definitions/nonNegativeIntegerDefault0" },
    "uniqueItems": {
      "type": "boolean",
      "default": false
    },
    "contains": { "$ref": "#" },
    "maxContains": {
      "$ref": "#/definitions/nonNegativeInteger",
      "description": "(2020-12) Maximum number of items matching contains"
    },
    "minContains": {
      "$ref": "#/definitions/nonNegativeInteger",
      "description": "(2020-12) Minimum number of items matching contains",
      "default": 1
    },
    "maxProperties": { "$ref": "#/definitions/nonNegativeInteger" },
    "minProperties": { "$ref": "#/definitions/nonNegativeIntegerDefault0" },
    "required": { "$ref": "#/definitions/stringArray" },
    "additionalProperties": { "$ref": "#" },
    "unevaluatedItems": {
      "$ref": "#",
      "description": "(2020-12) Schema for items not evaluated by other keywords"
    },
    "unevaluatedProperties": {
      "$ref": "#",
      "description": "(2020-12) Schema for properties not evaluated by other keywords"
    },
    "definitions": {
      "type": "object",
      "additionalProperties": { "$ref": "#" },
      "default": {}
    },
    "$defs": {
      "type": "object",
      "additionalProperties": { "$ref": "#" },
      "default": {},
      "description": "(2020-12) Replacement for definitions"
    },
    "properties": {
      "type": "object",
      "additionalProperties": { "$ref": "#" },
      "default": {}
    },
    "patternProperties": {
      "type": "object",
      "additionalProperties": { "$ref": "#" },
      "propertyNames": { "format": "regex" },
      "default": {}
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          { "$ref": "#" },
          { "$ref": "#/definitions/stringArray" }
        ]
      }
    },
    "dependentSchemas": {
      "type": "object",
      "additionalProperties": { "$ref": "#" },
      "description": "(2020-12) Schema-based dependency – replaces schema form of dependencies"
    },
    "dependentRequired": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/stringArray" },
      "description": "(2020-12) Property-based dependency – replaces array form of dependencies"
    },
    "propertyNames": { "$ref": "#" },
    "const": true,
    "enum": {
      "type": "array",
      "items": true,
      "minItems": 1,
      "uniqueItems": true
    },
    "type": {
      "anyOf": [
        { "$ref": "#/definitions/simpleTypes" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/simpleTypes" },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },
    "format": { "type": "string" },
    "contentMediaType": { "type": "string" },
    "contentEncoding": { "type": "string" },
    "contentSchema": {
      "$ref": "#",
      "description": "(2020-12) Schema for validating decoded content"
    },
    "if": { "$ref": "#" },
    "then": { "$ref": "#" },
    "else": { "$ref": "#" },
    "allOf": { "$ref": "#/definitions/schemaArray" },
    "anyOf": { "$ref": "#/definitions/schemaArray" },
    "oneOf": { "$ref": "#/definitions/schemaArray" },
    "not": { "$ref": "#" }
  },
  "default": true
}
